{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "pretty": true,
    "rootDir": "src"
  },
  "formatOptions": {
    "tabSize": 2
  },
  "exclude": [
    "node_modules"
  ]
}
